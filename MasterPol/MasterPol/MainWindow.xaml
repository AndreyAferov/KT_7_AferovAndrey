<Window x:Class="MasterPol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterPol"
        mc:Ignorable="d"
        Title="ИС - Мастер Пол"
        WindowStartupLocation="CenterScreen"
        MinHeight="650"
        MinWidth="1000"
        Height="650" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#F4E8D3 ">
            <Image HorizontalAlignment="Left" Margin="300,0,0,0" Source="/Resources/Мастер пол.png" />
            <TextBlock Text="Мастер Пол" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35"></TextBlock>
        </Grid>
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center"></Frame>
    </Grid>
</Window>
